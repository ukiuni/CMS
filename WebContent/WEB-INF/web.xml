<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<filter>
		<filter-name>ShowIndexHTMLFilter</filter-name>
		<filter-class>org.ukiuni.report.ShowIndexHTMLFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ShowIndexHTMLFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>ComplessAllControllerFilter</filter-name>
		<filter-class>org.ukiuni.report.JoinedJavascriptResponder</filter-class>
		<init-param>
			<param-name>compress</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>ComplessAllControllerFilter</filter-name>
		<url-pattern>/scripts/allController.js</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>AngularJSRouteBuilderFromTemplates</filter-name>
		<filter-class>org.ukiuni.report.AngularJSRouteBuilderFromTemplates</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AngularJSRouteBuilderFromTemplates</filter-name>
		<url-pattern>/scripts/setupRouteFunction.js</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>jersey-serlvet</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>org.ukiuni.report.action</param-value>
		</init-param>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>org.ukiuni.report.Application</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>jersey-serlvet</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
</web-app>